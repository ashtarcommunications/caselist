  "author": "Aaron Hardy <support@paperlessdebate.com> (https://paperlessdebate.com)",
  "homepage": "https://paperlessdebate.com",
  "license": "GPL3",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-regular-svg-icons": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.15",
    "@speechanddebate/eslint-config-nsda": "^1.0.20",
    "@speechanddebate/nsda-js-utils": "^1.0.14",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@uiw/react-md-editor": "^3.8.5",
    "dompurify": "^2.3.8",
    "js-cookie": "^3.0.0",
    "lodash": "^4.17.21",
    "mammoth": "^1.4.18",
    "moment": "^2.29.1",
    "purecss": "^2.0.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "^11.4.2",
    "react-hook-form": "^7.12.2",
    "react-markdown": "^7.1.1",
    "react-router-dom": "^6.1.0",
    "react-table": "^7.7.0",
    "react-toastify": "^9.0.0",
    "react-toggle": "^4.1.2",
    "react-widgets": "^5.8.4",
    "rehype-sanitize": "^6.0.0",
    "turndown": "^7.1.1",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "start": "vite --open",
    "build": "vite build",
    "server": "vite preview",
    "lint": "eslint src",
    "test": "vitest watch",
    "test-silent": "vitest --silent",
    "test-cover": "vitest --coverage",
    "test-ci": "vitest --run",
    "prepare": "husky"
  },
  "eslintConfig": {
    "extends": [
      "plugin:import/recommended",
      "@speechanddebate/eslint-config-nsda",
      "@speechanddebate/eslint-config-nsda/react"
    ],
    "plugins": [
      "import"
    ],
    "rules": {
      "import/no-unresolved": 0
    },
    "overrides": [
      {
        "files": [
          "**/*.js?(x)"
        ],
        "rules": {
          "import/no-unresolved": 0
        }
      },
      {
        "files": [
          "**/*.test.js?(x)"
        ],
        "extends": [
          "@speechanddebate/eslint-config-nsda"
        ],
        "rules": {
          "import/no-unresolved": 0
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.1.0",
    "@vitest/coverage-v8": "^0.34.6",
    "chai": "^4.3.6",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-testing-library": "^6.1.0",
    "husky": "^9.0.11",
    "jsdom": "^22.1.0",
    "postcss-normalize": "^10.0.1",
    "vite": "^4.4.11",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-svgr": "^4.1.0",
    "vitest": "^0.34.6"
  }
}
